<%- | 
  String[1] $zookeeper_host,
  String[1] $mongodb_host,
| -%>

{
  "index" : {
    "module" : "solr",
    "options" : {
      "zkHosts" : "<%= $zookeeper_host %>/solr",
      "isStoreFields" : false
    }
  },
  "storage" : {
    "module" : "mongodb",
    "options" : {
      "connectionUri" : "mongodb://<%= $mongodb_host %>/?replicaSet=rs0&w=majority&journal=true&wtimeoutMS=30000&readConcernLevel=linearizable"
    }
  }
}
